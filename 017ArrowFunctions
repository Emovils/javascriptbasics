

let add = function(num1,num2)  // function expression
         {
            return num1 + num2;
         }

let sum = add
let result = sum(5,6)
console.log(result);

// there are two types of variables local & global 
// local variable can be used inside the brace bracket or inside the function bracket but cant be used outside the function
// global variable can be used inside and outside the function 

