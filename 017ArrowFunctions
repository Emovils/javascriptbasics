function Ade(Num1,Num2,Num3=1) // parameters
// default values are added when
{
    return Num1 + Num2 + Num3
}
let output = Ade(5,8); //Arguements
console.log(output);


// Arrow functions reduces the numbers of lines 

let greet = () => {
    console.log('Hello Friend');
    return 1;
}
console.log(greet());

let meet = (user) => {
    console.log("Hello " + user);
    return 1;
}
console.log(meet("Ovili"));

// in arrow function if you have only one statement you dont need to return curley brackets and return
// everything can be written in one line
let added = (A,B) => A + B

let Answer = added(6,9)
console.log(result);
